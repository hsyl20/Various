#/bin/sh

wid=$(xdotool getwindowfocus)
wd=$(xprop -id $wid -notype _XMONAD_WORKING_DIR | cut -d "=" -f 2 | cut -d "\"" -f 2)

if [[ -n $wd ]]
   then exec terminology -d $wd
fi

pid=$(xdotool getwindowpid $wid)
wd=$(pwdx $pid | cut -d ":" -f 2 | sed -e "s/^ //")

if [[ -n $wd ]]
   then exec terminology -d $wd
fi

exec terminology
